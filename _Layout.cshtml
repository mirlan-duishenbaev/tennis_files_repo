    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
         <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
        <title>@ViewData["Title"] - Tennis</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/news.css" />
        <link rel="stylesheet" href="~/css/allnews.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,400;0,500;0,700;1,100;1,200&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Manrope&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://kit-free.fontawesome.com/releases/v5.11.1/css/free.min.css" media="all">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    </head>
    <style>
    body {
        background-image: url('@Url.Content("~/background.jpeg")');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        background-attachment: fixed;
    }

    </style>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/avatars/SponsorAvatars/main.svg" style="width:100px;height:40px" /></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item ml-auto">
                                <a style="color: white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="nav-link marginNavItems" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                            </li>
                            <li class="nav-item ml-2">
                                <a style="color: white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="nav-link marginNavItems" asp-area="" asp-controller="Tournament" asp-action="Index">Календарь</a>
                            </li>
                            <li class="nav-item ml-2">
                                <a style="color: white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="nav-link marginNavItems" asp-area="" asp-controller="Ratings" asp-action="Index">Рейтинг</a>
                            </li>
                            <li class="nav-item ml-2 mr-1">
                                <a style="color: white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="nav-link marginNavItems" asp-area="" asp-controller="News" asp-action="Index">Блог</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("admin"))
                                {
                                    <li class="btn-group dropdown nav-item ml-2">
                                        <a onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="dropdown-toggle nav-link textHover marginNavItems" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Админ-панель
                                        </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-area="" asp-controller="Calendar" asp-action="Index">Календарь</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">Список пользователей</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="Sponsor" asp-action="Index">Спонсоры</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="News" asp-action="Index">Добавить Новость</a>
                                        </div>
                                    </li>
                                }
                            }

                            <div class="dropdown ml-3">
                            <li onclick="Check()" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="dropdown-toggle mt-2 ml-2 textHover marginNavItems" type="button" id="rulesMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                Положения
                            </li>
                            <ul class="dropdown-menu" aria-labelledby="rulesMenu" id="parent">

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(2)" class="dropdown-item" type="button">Положение КСЛТ</button></a></li>
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(3)" class="dropdown-item" type="button">Форма заявки на проведение турнира</button></a></li>
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(4)" class="dropdown-item" type="button">Таблица начисления рейтинговых очков</button></a></li>
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(5)" class="dropdown-item" type="button">Дисциплинарное положение КСЛТ</button></a></li>
                                }
                                </ul>
                            </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ml-auto">
                            <a style="color:white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="btn" asp-controller="Users" asp-action="UserPage">Личный кабинет</a>
                        </li>
                        <li class="nav-item ml-2">
                            <form method="post" asp-controller="Account" asp-action="LogOff">
                                <input style="color:white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="btn" type="submit" value="Выход" />
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ml-auto">
                            <a style="color:white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="btn" asp-controller="Account" asp-action="Login">Вход</a>
                        </li>
                        <li class="nav-item ml-2">
                            <a style="color:white;" onmouseover="this.style.color = 'green'" onmouseout="this.style.color = 'white'" class="btn" asp-controller="Account" asp-action="Register">Регистрация</a>
                        </li>

                    }
                    </ul>
                </div>
                </div>
            </nav>
        </header>
        <div id="mainBody" class="wrapper">
            <main class="main pb-3" role="main">
                @RenderBody()
            </main>
        </div>
        <footer class="footer border-top text-muted" id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <a asp-controller="Home" asp-action="Index" class="footerlogo"><img src="~/avatars/SponsorAvatars/main.svg" style="width: 100px; height: 40px" class="mt-4"/></a>
                        <p class="pfooter" style="height: 10px;">Copyright © 2022 KSLT</p>
                        <p class="pfooter" style="height: 10px;">All rights reserved</p>
                        <a href="https://instagram.com/kslt_tennis.kg?utm_medium=copy_link"><i class="fab fa-instagram"></i></a>
                        <a href="https://www.facebook.com/groups/366902833749477/"><i class="fab fa-facebook-square"></i></a>
                    </div>
                    <div class="col">
                        <h4 class="h4footer mt-4">О Нас</h4>
                        <a asp-controller="Tournament" asp-action="Index" class="text-decoration-none"><p class="pfooter" style="height: 17px;">Календарь</p></a>
                        <a asp-controller="Ratings" asp-action="Index" class="text-decoration-none"><p class="pfooter" style="height: 17px;">Рейтинг</p></a>
                        <a asp-controller="News" asp-action="Index" class="text-decoration-none"><p class="pfooter" style="height: 17px;">Блог</p></a>
                        <div class="dropup">
                            <li onclick="Check()" class="pfooter text-white dropdown-toggle mt-2" type="button" id="rulesMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                Положения
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <ul class="dropdown-menu" aria-labelledby="rulesMenu">

                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(2)" class="dropdown-item" type="button">Положение КСЛТ</button></a></li>
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(3)" class="dropdown-item" type="button">Форма заявки на проведение турнира</button></a></li>
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(4)" class="dropdown-item" type="button">Таблица начисления рейтинговых очков</button></a></li>
                                    <li><a style="text-decoration:none;"><button onclick="GetClientReport(5)" class="dropdown-item" type="button">Дисциплинарное положение КСЛТ</button></a></li>
                                </ul>
                            }
                            </div>
                    </div>
                    <div class="col">
                        <h4 class="h4footer mt-4">Условия</h4>
                        <a onclick="GetClientReport(6)" class="text-decoration-none"><p class="pfooter" style="height: 17px;">Публичная оферта</p></button></a>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#questionModal" data-bs-whatever="mdo" style="padding: 0;border: none;font: inherit;background-color: transparent;cursor: pointer;"><p class="pfooter">Задать вопрос</p></button>
                    </div>
                </div>
            </div>
        </footer>
        <div class="modal fade" id="questionModal" tabindex="-1" aria-labelledby="questionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" style="padding-bottom:0">
                        <h5 class="modal-title" id="exampleModalLabel">Задайте вопрос<br><p style="font-size:14px">(Все поля должны быть заполнены)</p></h5>

                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Ваш Email:</label>
                                <input type="text" class="form-control" id="recipient-email" required>
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Вашe Имя:</label>
                                <input type="text" class="form-control" id="recipient-name" required>
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Ваш номер:</label>
                                <input type="text" class="form-control" id="recipient-number" required>
                            </div>
                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Вопрос:</label>
                                <textarea class="form-control" id="message-text" required></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <button type="submit" class="btn btn-success" onclick="SendMessage()" data-bs-dismiss="modal" id="sendbutton">Отправить</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script>let Check = function () {
                let parent = document.getElementById('parent');
                if (parent.childNodes.length === 1) {
                    swal("", "Доступно только авторизованным пользователям", "info");
                }
            }
            function GetClientReport(key) {
                var URL = '/Home/GetVirtualFile?key=' + key;
                window.open(URL, "_blank");
            };</script>
        @RenderSection("Scripts", required: false)
    </body>
</html>

<script>
    function SendMessage()
    {
        $.post('@Url.Action("SendEmailQuestion", "Account")', {
            email: $("#recipient-email").val(),
            name: $("#recipient-name").val(),
            phone: $("#recipient-number").val(),
            question: $("#message-text").val(),
                }, function (response) {
                    swal(response, "", "success");
        })
    }
</script>


